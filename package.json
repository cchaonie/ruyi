{
  "name": "ruyibang",
  "version": "1.0.0",
  "description": "A tool to create a template library as you wish",
  "type": "module",
  "scripts": {
    "build": "pnpm --filter './packages/**/*' run build",
    "postinstall": "simple-git-hooks",
    "lint": "eslint --cache .",
    "format": "prettier --write --cache ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cchaonie/ruyibang.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cchaonie/ruyibang/issues"
  },
  "homepage": "https://github.com/cchaonie/ruyibang#readme",
  "packageManager": "pnpm@7.9.0",
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.33.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "rollup": "^3.12.0",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.9.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "packages/*/{src,types}/**/*.ts": [
      "eslint --cache --fix"
    ]
  },
  "dependencies": {
    "lint-staged": "^13.1.0"
  }
}
